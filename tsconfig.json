{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@platform/data/*":   ["./typings/data/*"],
      "@platform/utils/*":  ["./typings/utils/*"],
      "@platform/shared/*": ["./typings/shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "resource.ts",
    "typings/**/*.ts"
  ]
}
